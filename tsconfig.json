{
    "compilerOptions": {
      "lib": [
        "es6"
      ],
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*"
    ],
    "rootDir": "./src",
    "outDir": "./build",
  }